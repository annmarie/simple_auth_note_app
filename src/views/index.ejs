<!DOCTYPE html>
<html>
<head>
    <title>Welcome</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
<div data-target="main" class="container">

  <div class="topbar text-center">
    <h1><span class="fa fa-lock"></span> Welcome </h1>

    <div data-target="auth-display">

      <!-- auth display -->
      <div data-target="is-auth-display" class="hidden">
        <p data-target="auth-user-email"><p>
        <a href="/logout"><button><span class="fa fa-user"></span> Logout</button></a>
      </div>

      <!-- notauth display -->
       <div data-target="not-auth-display" class="hidden">
         <button data-action="login-modal-open"><span class="fa fa-user"></span> Login</button>
       </div>

    </div>
  </div>

  <div data-target="auth-modals">

    <!-- login modal -->
    <div data-target="login-modal" class="mymodal-wrapper">
        <div data-target="modal" class="mymodal">
          <div class="mymodal-content">
            <span data-target="close-modal" class="mymodal-close">&times;</span>
            <h1><span class="fa fa-sign-in"></span> Login</h1>
            <div data-target="form-alert" class="alert alert-danger hidden"></div>
            <form action="#" id="modal-form" method="post">
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="password">
              </div>
              <button data-action="submit" type="submit">Login</button>
            </form>
          </div>
        </div>
    </div>

  </div>

<script src="/gen/bundle.js"></script>
</div>
</body>
</html>
